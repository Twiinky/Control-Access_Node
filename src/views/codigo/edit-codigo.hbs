<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar vehiculo</h3>
        </div>
        <div class="card-body">
            <form action="/codigo/edit-codigo/{{codigo._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="tipovehiculo" placeholder="Tipo de vehiculo" value="{{codigo.tipovehiculo}}">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" class="form-control">
                        {{codigo.descripcion}}
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>