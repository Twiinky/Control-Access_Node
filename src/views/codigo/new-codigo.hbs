<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>Registar nuevo vehiculo</h3>
    </div>
    
    <div class="card-body">
        <form action="/codigo/new-codigo" method="POST">
            <div class="form-group">
                <input type="text" name="tipovehiculo" class="form-control" placeholder="Tipo de vehiculo" autofocus>
            </div>
            <div class="form-group">
                <textarea name="descripcion" class="form-control" placeholder="Descripcion del vehiculo"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Guardar</button>
            </div>
        </form>
    </div>
</div>
</div>